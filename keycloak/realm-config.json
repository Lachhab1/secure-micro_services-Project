{
  "realm": "secure-microservices",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrateur - Accès complet à toutes les fonctionnalités"
      },
      {
        "name": "CLIENT",
        "description": "Client - Consultation des produits et gestion de ses commandes"
      }
    ]
  },
  "clients": [
    {
      "clientId": "frontend-app",
      "name": "Frontend React Application",
      "description": "Client public pour l'application React",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5173/*",
        "http://64.227.40.205:3000/*",
        "http://134.122.86.244:3000/*",
        "*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "http://64.227.40.205:3000",
        "http://134.122.86.244:3000",
        "*"
      ],
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "defaultClientScopes": [
        "openid",
        "profile",
        "email",
        "roles"
      ]
    },
    {
      "clientId": "api-gateway",
      "name": "API Gateway",
      "description": "Client confidentiel pour l'API Gateway",
      "enabled": true,
      "publicClient": false,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": false,
      "serviceAccountsEnabled": true,
      "secret": "api-gateway-secret-change-in-production",
      "protocol": "openid-connect",
      "defaultClientScopes": [
        "openid",
        "profile",
        "roles"
      ]
    },
    {
      "clientId": "product-service",
      "name": "Product Microservice",
      "description": "Bearer-only client pour le service Produit",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "protocol": "openid-connect"
    },
    {
      "clientId": "order-service",
      "name": "Order Microservice",
      "description": "Bearer-only client pour le service Commande",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "protocol": "openid-connect"
    }
  ],
  "users": [
    {
      "username": "admin",
      "email": "admin@secure-project.com",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "ADMIN"
      ]
    },
    {
      "username": "client1",
      "email": "client1@secure-project.com",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Client",
      "lastName": "One",
      "credentials": [
        {
          "type": "password",
          "value": "client123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "CLIENT"
      ]
    },
    {
      "username": "client2",
      "email": "client2@secure-project.com",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Client",
      "lastName": "Two",
      "credentials": [
        {
          "type": "password",
          "value": "client123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "CLIENT"
      ]
    }
  ],
  "clientScopes": [
    {
      "name": "roles",
      "description": "OpenID Connect scope for roles",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],
  "defaultDefaultClientScopes": [
    "openid",
    "profile",
    "email",
    "roles"
  ],
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000
}